<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="CustomTabStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">8dp</item>
    </style>


    <style name="CustomButtonStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/color_btn_tap</item>
        <item name="colorButtonNormal">@color/color_btn</item>
        <item name="android:opacity">translucent</item>
        <item name="android:textColor">@color/color_txt</item>
        <item name="android:textAllCaps">false</item>

        <item name="android:shape">rectangle</item>
    </style>

    <style name="CustomEditTextStyle" parent="@android:style/TextAppearance" >


        <item name="android:textColor">@color/color_txt</item>

    </style>



</resources>
